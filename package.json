{
  "name": "Pamoja-tech",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec babel-node ./api",
    "start": "babel-node ./api/index.js",
    "test": "cross-env NODE_ENV=test jest   --coverage --testTimeout=10000 --detectOpenHandles --forceExit",
    "prettier": "eslint --ignore-path ./.eslintignore . --fix",
    "build": "rm -rf ./build && babel -d ./build ./api -s",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "author": "Caleb Mugisha",
  "license": "ISC",
  "dependencies": {
    "@hapi/joi": "16.1.8",
    "express": "4.17.1",
    "nodemon": "2.0.1",
    "dotenv": "8.1.0"
  },
  "devDependencies": {
    "@babel/cli": "7.6.2",
    "@babel/core": "7.6.2",
    "@babel/node": "7.6.2",
    "@babel/plugin-transform-runtime": "7.6.2",
    "@babel/preset-env": "7.6.2",
    "@babel/register": "7.6.2",
    "@babel/runtime": "7.6.2",
    "babel-eslint": "10.0.3",
    "cross-env": "^6.0.3",
    "babel-loader": "8.0.6",
    "coveralls": "3.0.7",
    "eslint": "6.4.0",
    "eslint-config-airbnb-base": "14.0.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-jest": "23.0.4",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "lint-staged": "9.4.3",
    "prettier": "1.19.1",
    "supertest": "4.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "yarn prettier",
      "git add"
    ]
  },
  "private": true
}
